@model IEnumerable<Ogretmen>    

<h2>Ogretmen Listesi</h2>
<a asp-controller="Ogretmen" asp-action="Create" class="btn btn-primary">Ogretmen ekle</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 10px;">@Html.DisplayNameFor(m=>m.OgretmenId)</th>
            <th>@Html.DisplayNameFor(m=>m.Ad)</th>
            <th>@Html.DisplayNameFor(m=>m.Soyad)</th>
            <th>@Html.DisplayNameFor(m=>m.BaslamaTarihi)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OgretmenId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Soyad)</td>
                <td>@Html.DisplayFor(modelItem => item.BaslamaTarihi)</td>
                <td>
                    <a asp-controller="Ogretmen" asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-warning btn-sm">Details</a>
                    <a asp-controller="Ogretmen" asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
